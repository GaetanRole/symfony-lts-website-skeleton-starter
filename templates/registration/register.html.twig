{% extends 'base.html.twig' %}

{% block description 'register.header.description'|trans %}

{% block title 'register.header.title'|trans %}

{% block body_id 'register' %}

{% block body %}
    <section>
        <div class="container text-center">
            <div class="row mb-4">
                <div class="col">
                    <h1><span class="fas fa-user-plus"></span> {{ 'register.body.firsttitle'|trans|upper }}</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md">
                            <div class="form-group form-error">
                                {% if form.firstName.vars.errors|length %}
                                    {{ form_widget(form.firstName,
                                        form.firstName.vars|merge({'attr': {'autofocus': true, 'class': 'form-control'} }) ) }}
                                    {{ form_errors(form.firstName) }}
                                {% else %}
                                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'} }) }}
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-group form-error">
                                {% if form.lastName.vars.errors|length %}
                                    {{ form_widget(form.lastName,
                                        form.lastName.vars|merge({'attr': {'autofocus': null, 'class': 'form-control'} }) ) }}
                                    {{ form_errors(form.lastName) }}
                                {% else %}
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'} }) }}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="form-group form-error">
                        {% if form.email.vars.errors|length %}
                            {{ form_widget(form.email,
                                form.email.vars|merge({'type':'email', 'attr': {'autofocus': null, 'class': 'form-control'} }) ) }}
                            {{ form_errors(form.email) }}
                        {% else %}
                            {{ form_widget(form.email, {'type':'email', 'attr': {'class': 'form-control'} }) }}
                        {% endif %}
                    </div>

                    <div class="form-group form-error">
                        {% if form.plainPassword.first.vars.errors|length %}
                            {{ form_widget(form.plainPassword.first,
                                form.plainPassword.first.vars|merge({'type':'password', 'attr': {'autofocus': null, 'class': 'form-control'} }) ) }}
                            {{ form_errors(form.plainPassword.first) }}
                        {% else %}
                            {{ form_widget(form.plainPassword.first, {'type':'password', 'attr': {'class': 'form-control'} }) }}
                        {% endif %}
                    </div>

                    <div class="form-group form-error">
                        {% if form.plainPassword.second.vars.errors|length %}
                            {{ form_widget(form.plainPassword.second,
                                form.plainPassword.second.vars|merge({'type':'password', 'attr': {'autofocus': null, 'class': 'form-control'} }) ) }}
                            {{ form_errors(form.plainPassword.second) }}
                        {% else %}
                            {{ form_widget(form.plainPassword.second, {'type':'password', 'attr': {'class': 'form-control'} }) }}
                        {% endif %}
                    </div>

                    <div class="mb-2">
                        {{ form_label(form.termsAccepted) }}
                        {{ form_widget(form.termsAccepted) }}
                    </div>

                    <button type="submit" class="btn btn-success"><span class="fas fa-plus-circle"></span> {{ 'register.body.form.submit'|trans }}</button>

                    {{ form_end(form) }}
                </div>
            </div>
            <div class="row text-left ul-subtitle-text">
                <div class="col">
                    <u>{{ 'index.body.ul.second'|trans }}</u>
                    <ul>
                        <li><a href="{{ path('app_index') }}">{{ 'button.homepage'|trans }}</a></li>
                        <li><a href="{{ path('app_login') }}">{{ 'button.login'|trans }}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
